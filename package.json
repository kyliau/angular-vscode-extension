{
  "name": "angular-language-service",
  "displayName": "Angular Language Service",
  "description": "Language service for Angular templates",
  "repository": "https://github.com/kyliau/angular-vscode-extension",
  "version": "0.0.1",
  "publisher": "Angular",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "ng-template",
        "aliases": [
          "Angular Template"
        ],
        "extensions": [
          ".html",
          ".ng.html"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ng-template",
        "scopeName": "text.html.basic",
        "path": "./angular.tmLanguage"
      }
    ],
    "typescriptServerPlugins": [
      {
        "name": "@angular/language-service",
        "enableForWorkspaceTypeScriptVersions": true,
        "languages": [
          "ng-template"
        ]
      }
    ]
  },
  "dependencies": {
    "@angular/language-service": "^8.0.0-rc.4"
  },
  "devDependencies": {
    "vsce": "^1.61.0"
  }
}
